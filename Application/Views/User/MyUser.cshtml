@model Data.Dto_s.MyUserDto;

<style>
    .profile-image{
        width: 60px;
        height: 60px;
        margin-left: 5px;
        border-radius: 100%
    }
</style>

<!-- Modal -->
<div class="modal fade" id="imageModal" tabindex="-1" role="dialog" aria-labelledby="imageModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="imageModalLabel">Change Profile Photo</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="uploadForm" asp-controller="User" asp-action="ChangeCurrentUserProfilePicture" method="post" enctype="multipart/form-data">
                    <input type="file" name="photo" id="fileInput" />
                    <input type="hidden" name="id" value="@Model.Id" />
                    <input type="submit" class="btn btn-primary" id="uploadBtn"  value="Upload" />
                    <button type="button" class="closeModal btn btn-secondary" data-dismiss="modal">Close</button>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Modal -->

<div class="row informationUser">
<div class="col-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title d-inline-block">My account</h4>
                @if (User.FindFirst("ProfilePhotoPath").Value.ToString().Length > 3)
                {
                    <img src="~/images/@User.FindFirst("ProfilePhotoPath").Value.ToString()" class="profile-image inline-block" alt="Profile" />
                }
                else
                {
                    <img src="~/images/blank-profile.png" class="profile-image inline-block" alt="blankuser" />
                }
                <p class="card-description"> Personal info </p>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">First Name</label>
                            <div class="col-sm-9">
                            <p class="card-description">@Model.FirstName</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Last Name</label>
                            <div class="col-sm-9">
                            <p class="card-description">@Model.LastName</p>
                        </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Role</label>
                            <div class="col-sm-9">
                                <p class="card-description">@Model.RoleName</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Date of Birth</label>
                            <div class="col-sm-9">
                            <p class="card-description">@Model.DateOfBirth</p>
                        </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Phone Number</label>
                            <div class="col-sm-9">
                            <p class="card-description">@Model.PhoneNumber</p>
                        </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Email</label>
                            <div class="col-sm-9">
                            <p class="card-description">@Model.Email</p>
                        </div>
                        </div>
                    </div>
                    <div class="col-sm-9">
                        <button id="editLink" class="btn-outline-primary btn btn-fw">Edit</button>
                    </div>
                </div>
          </div>
    </div>
</div>
</div>

<div id="editFields" style="display:none">
<div class="col-12">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">My account</h4>
                @if (User.FindFirst("ProfilePhotoPath").Value.ToString().Length > 3)
                {
                    <img src="~/images/@User.FindFirst("ProfilePhotoPath").Value.ToString()" class="profile-image inline-block" alt="Profile" />
                    <span class="login-status online"></span>
                }
                else
                {
                    <img src="~/images/blank-profile.png" class="profile-image inline-block" alt="blankuser" />
                }
            <form class="form-sample" asp-controller="User" asp-action="EditUser">
                <input type="hidden" asp-for="Id" value="@Model.Id" class="form-control" />
                <p class="card-description"> Edit personal info </p>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">First Name</label>
                            <div class="col-sm-9">
                                <input asp-for="FirstName" value="@Model.FirstName" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Last Name</label>
                            <div class="col-sm-9">
                                <input asp-for="LastName" value="@Model.LastName" class="form-control" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Role</label>
                            <div class="col-sm-9">
                                    <p class="card-description">@Model.RoleName</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Date of Birth</label>
                            <div class="col-sm-9">
                                <input type="date" asp-for="DateOfBirth" value="@Model.DateOfBirth" class="form-control" placeholder="dd/mm/yyyy" />
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Phone Number</label>
                            <div class="col-sm-9">
                                    @if (Model.PhoneNumber != null)
                                    {
                                        <input type="tel" pattern="[0-9]{3}-[0-9]{3}-[0-9]{3}" asp-for="PhoneNumber" value="@Model.PhoneNumber" class="form-control" />

                                    }
                                    else
                                    {
                                        <input type="tel" id="phoneNumber" pattern="[0-9]{3}-[0-9]{3}-[0-9]{3}" asp-for="PhoneNumber"  placeholder="___-___-___" maxlength="11" />
                                    }
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group row">
                            <label class="col-sm-3 col-form-label">Email</label>
                            <div class="col-sm-9">
                                <input type="email" asp-for="Email" value="@Model.Email" class="form-control" />
                            </div>
                        </div>
                    </div>
                    <div class="col-sm-9">
                        <button type="submit" class="btn-outline-primary btn btn-fw" >Save</button>
                    </div>
                </div>
            </form>
                <button class="btn-outline-primary btn btn-fw backBtn" style="float:right; margin:2px;">Back</button>
        </div>
    </div>
 </div>
</div>



    <script>
        $(document).ready(function () {
        $('.row .informationUser').show(); 

            $('#editLink').on('click', function () {
            $('.informationUser').hide();
            $('#editFields').show(); 
            });
        $('.profile-image').on('click', function () {
            $('#imageModal').modal('show');
        });

        $('#uploadBtn').on('click', function () {
            $('#imageModal').modal('hide'); 
        });

        $('.backBtn').on('click', function () {
            $('#editFields').hide(); 
            $('.informationUser').show(); 
        });
                $('.closeModal').on('click', function () {
            $('#imageModal').hide();
        });
        $('.close').on('click', function () {
            $('#imageModal').hide();
        });

        $('#fileInput').on('change', function () {
            var file = this.files[0];
        });

        });
    document.getElementById('phoneNumber').addEventListener('input', function (e) {
        let x = e.target.value.replace(/\D/g, '').match(/(\d{0,3})(\d{0,3})(\d{0,4})/);
        e.target.value = !x[2] ? x[1] : x[1] + '-' + x[2] + (x[3] ? '-' + x[3] : '');
    });
    </script>
