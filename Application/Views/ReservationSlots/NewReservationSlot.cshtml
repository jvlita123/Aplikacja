@model Data.Entities.ReservationSlots
@{
    var services = (IEnumerable<Data.Entities.Service>)ViewData["services"];
    var servicesJson = Newtonsoft.Json.JsonConvert.SerializeObject(services);
    var selectedDate = ((DateTime)ViewData["selectedDate"]).ToString("yyyy-MM-dd");

}

<h4>ReservationSlots</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NewReservationSlot">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ServiceId" class="control-label"></label>
                <select id="ServiceId" asp-for="ServiceId" class="form-control">
                    @foreach (var service in services)
                    {
                        <option value="@service.Id">@service.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input asp-for="Date" id="selectedDate" class="form-control" value="@selectedDate" readonly type="text" />
            </div>
            <div>
                <label>Hour:</label>
                <input type="time" id="selectedTime" />
            </div>
            <div class="form-group">
                <label asp-for="StartTime" class="control-label"></label>
                <input id="StartTime" asp-for="StartTime" class="form-control" readonly />
                <span asp-validation-for="StartTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndTime" class="control-label"></label>
                <input id="EndTime" asp-for="EndTime" class="form-control" readonly />
                <span asp-validation-for="EndTime" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsAvailable" /> @Html.DisplayNameFor(model => model.IsAvailable)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    var services = @Html.Raw(servicesJson);

    $('#ServiceId').change(function () {
        selectedService = services.find(s => s.Id == $('#ServiceId').val());
    });

    var selectedDateInput = document.getElementById('selectedDate');
    var selectedTimeInput = document.getElementById('selectedTime');
    var startTimeInput = document.getElementById('StartTime');
    var endTimeInput = document.getElementById('EndTime');

    $('#selectedTime').change(function () {
        var selectedTime = selectedTimeInput.value;
        var serviceId = $('#ServiceId').val();
        var selectedService = services.find(s => s.Id == serviceId);
        var serviceTime = selectedService.ServiceTime.split(':').map(Number);

        var startTime = selectedTime;

        var [selectedHours, selectedMinutes] = selectedTime.split(':').map(Number);
        var [serviceHours, serviceMinutes] = selectedService.ServiceTime.split(':').map(Number);

        var endHours = selectedHours + serviceHours;
        var endMinutes = selectedMinutes + serviceMinutes;

        endHours += Math.floor(endMinutes / 60);
        endMinutes %= 60;

        var endTime = `${String(endHours).padStart(2, '0')}:${String(endMinutes).padStart(2, '0')}`;


        startTimeInput.value = startTime;
        endTimeInput.value = endTime;
    });
</script>