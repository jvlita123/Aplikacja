@model IEnumerable<Data.Entities.Service>

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Services</h4>
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description.</th>
                            <th>Service time</th>
                            <th> </th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="service-info" data-row-id="@item.Id">
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.ServiceTime</td>
                                <td>
                                    <a class="edit-link" data-id="@item.Id" href="#">Edit</a> |
                                    <a class="delete-link" data-id="@item.Id" href="#">Delete</a>
                                </td>
                            </tr>

                            <tr class="hidden-form" data-row-id="@item.Id" style="display:none">
                                <form class="form-sample" asp-controller="Services" asp-action="Edit">
                                    <input asp-for="@Model.Where(x=>x.Id == item.Id).First().Id"  type="hidden" name="Id" />
                                <td>
                                    <div class="form-group">
                                        <input asp-for="@Model.Where(x=>x.Id == item.Id).First().Name" name="Name" class="form-control" />
                                    </div>
                                </td>
                                <td>
                                    <div class="form-group">
                                        <input asp-for="@Model.Where(x=>x.Id == item.Id).First().Description" name="Description" class="form-control" />
                                    </div>
                                </td>
                                <td>
                                    <div class="form-group">
                                        <input asp-for="@Model.Where(x=>x.Id == item.Id).First().ServiceTime" name="ServiceTime" class="form-control" />
                                    </div>
                                </td>
                                <td>
                                    <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                        <button class="btn btn-secondary cancel-btn">Cancel</button> 
                                    </div>
                                </td>
                                </form>

                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="modal" id="deleteModal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this record?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
            </div>
        </div>
    </div>
</div>




<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $('.edit-link').on('click', function (e) {
        e.preventDefault();
        var $row = $(this).closest('.service-info');
        var $formRow = $row.next('.hidden-form');

        // Zamykanie poprzedniego aktywnego formularza edycji
        $('.hidden-form').not($formRow).hide();
        $('.service-info').not($row).show();

        // Pokazywanie lub ukrywanie aktualnie klikniętego wiersza
        $formRow.toggle();
        $row.toggle();
    });
    $('.cancel-btn').on('click', function (e) {
        e.preventDefault();
        $(this).closest('.hidden-form').hide();
        $(this).closest('.hidden-form').prev('.service-info').show();
    });
    $('.delete-link').on('click', function (e) {
        e.preventDefault();
        var itemId = $(this).data('id');
        var $rowToDelete = $(this).closest('.service-info'); // Wiersz do usunięcia

        $('#deleteModal').modal('show');

        $('#confirmDelete').on('click', function () {
            $.ajax({
                url: '/Services/Remove',
                method: 'POST',
                data: { id: itemId },
                success: function (response) {
                    console.log('Rekord usunięty pomyślnie');
                    $rowToDelete.remove(); // Usunięcie wiersza z tabeli po sukcesie usuwania
                },
                error: function (error) {
                    console.error('Błąd podczas usuwania rekordu', error);
                }
            });

            $('#deleteModal').modal('hide');
        });
    });
</script>