<div class="modal" tabindex="-1" role="dialog" id="myModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 id = "modaltitle"class="modal-title"></h5>
                <span aria-hidden="true">
                    <button type="button" id="closeModal" class="btn-close" data-dismiss="modal" aria-label="Close">
                    </button>
                </span>
            </div>
            <div class="modal-body " id="editReservationContent">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary registerBtn" data-dismiss="modal">Register</button>
            </div>
        </div>
    </div>
</div>


