<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Purple Admin</title>
    <link rel="stylesheet" href="~/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/assets/css/style.css">
    <link rel="shortcut icon" href="~/assets/images/favicon.ico" />
</head>
<body>
    <div class="container-scroller">
        <!-- partial:../../partials/_navbar.html -->
        <nav class="navbar default-layout-navbar col-lg-12 col-12 p-0 fixed-top d-flex flex-row">
            <div class="text-center navbar-brand-wrapper d-flex align-items-center justify-content-center">
                <a class="navbar-brand brand-logo" href="~/index.html"><img src="~/assets/images/logo.svg" alt="logo" /></a>
                <a class="navbar-brand brand-logo-mini" href="~/_Layout.html"><img src="~/assets/images/logo-mini.svg" alt="logo" /></a>
            </div>
            <div class="navbar-menu-wrapper d-flex align-items-stretch">
                <button class="navbar-toggler navbar-toggler align-self-center" type="button" data-toggle="minimize">
                    <span class="mdi mdi-menu"></span>
                </button>
                <div class="search-field d-none d-md-block">
                    <form class="d-flex align-items-center h-100" action="#">
                        <div class="input-group">
                            <div class="input-group-prepend bg-transparent">
                                <i class="input-group-text border-0 mdi mdi-magnify"></i>
                            </div>
                            <input type="text" class="form-control bg-transparent border-0" placeholder="Search projects">
                        </div>
                    </form>
                </div>
                <ul class="navbar-nav navbar-nav-right">
                        @if (User.Identity.IsAuthenticated)
                        {
                    <li class="nav-item nav-profile dropdown">
                            <a class="nav-link dropdown-toggle" id="profileDropdown" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                                <div class="nav-profile-img">
                                    @if (User.FindFirst("ProfilePhotoPath").Value.ToString().Length >= 3)
                                    {
                                        <img src="~/images/@User.FindFirst("ProfilePhotoPath").Value.ToString()" alt="UserPhoto" />
                                        <span class="availability-status online"></span>
                                    }
                                    else
                                    {
                                        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" alt="User Photo">
                                            <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                                            <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
                                        </svg>
                                        <span class="availability-status online"></span>
                                    }
                                </div>
                                    <div class="nav-profile-text">
                                        <p class="mb-1 text-black">@User.FindFirst("FullName").Value</p>
                                    </div>
                            </a>
                            <div class="dropdown-menu navbar-dropdown" aria-labelledby="profileDropdown">
                                <a class="dropdown-item" asp-area="" asp-controller="User" asp-action="MyUser">
                                    <i class="mdi mdi-cached me-2 text-success"></i> My account
                                </a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">
                                    <i class="mdi mdi-logout me-2 text-primary"></i> Signout
                                </a>
                            </div>
                    </li>
                        }
                         else
                        {
                        <li class="nav-item d-none d-lg-block">
                            <a class="nav-link dropdown-toggle btn" id="showModalBtn" data-bs-toggle="dropdown" aria-expanded="false">
                                <div class="nav-profile-text">
                                    <p class="mb-1 text-black">Sign in</p>
                                </div>
                            </a>
                        </li>
                  
                        }
                    <li class="nav-item d-none d-lg-block full-screen-link">
                        <a class="nav-link">
                            <i class="mdi mdi-fullscreen" id="fullscreen-button"></i>
                        </a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link count-indicator dropdown-toggle" id="messageDropdown" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="mdi mdi-email-outline"></i>
                            <span class="count-symbol bg-warning"></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="messageDropdown">
                            <h6 class="p-3 mb-0">Messages</h6>
                            <div class="dropdown-divider"></div>
                            <!-- Latest Messages (shoud be added)-->
                            @if (User.Identity.IsAuthenticated)
                            {
                                @*<a class="dropdown-item preview-item">
                                    <div class="preview-thumbnail">
                                        <img src="../../assets/images/faces/face4.jpg" alt="image" class="profile-pic">
                                    </div>
                                    <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                                        <h6 class="preview-subject ellipsis mb-1 font-weight-normal">Mark send you a message</h6>
                                        <p class="text-gray mb-0"> 1 Minutes ago </p>
                                    </div>
                                </a>
                                <div class="dropdown-divider"></div>
                                <h6 class="p-3 mb-0 text-center">4 new messages</h6>*@
                            }
                        </div>
                        <!-- Need to be update -->
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link count-indicator dropdown-toggle" id="notificationDropdown" href="#" data-bs-toggle="dropdown">
                            <i class="mdi mdi-bell-outline"></i>
                            <span class="count-symbol bg-danger"></span>
                        </a>
                        <div class="dropdown-menu dropdown-menu-right navbar-dropdown preview-list" aria-labelledby="notificationDropdown">
                            <h6 class="p-3 mb-0">Notifications</h6>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item preview-item">
                                <div class="preview-thumbnail">
                                    <div class="preview-icon bg-success">
                                        <i class="mdi mdi-calendar"></i>
                                    </div>
                                </div>
                                <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                                    <h6 class="preview-subject font-weight-normal mb-1">Reservations today</h6>
                                    <p class="text-gray ellipsis mb-0"> Just a reminder that you have an reservation today </p>
                                </div>
                            </a>
                            <div class="dropdown-divider"></div>
                            <a class="dropdown-item preview-item" asp-area="" asp-controller="User" asp-action="MyUser">
                                <div class="preview-thumbnail">
                                    <div class="preview-icon bg-warning">
                                        <i class="mdi mdi-settings"></i>
                                    </div>
                                </div>
                                <div class="preview-item-content d-flex align-items-start flex-column justify-content-center">
                                    <h6 class="preview-subject font-weight-normal mb-1">Settings</h6>
                                    <p class="text-gray ellipsis mb-0"> Profile settings </p>
                                </div>
                            </a>
                            <div class="dropdown-divider"></div>
                            <h6 class="p-3 mb-0 text-center">See all notifications</h6>
                        </div>
                    </li>
                    <li class="nav-item nav-logout d-none d-lg-block">
                        <a class="nav-link" asp-area="" asp-controller="Account" asp-action="Logout">
                            <i class="mdi mdi-power"></i>
                        </a>
                    </li>
                    @*                    <li class="nav-item nav-settings d-none d-lg-block">
                    <a class="nav-link" href="#">
                    <i class="mdi mdi-format-line-spacing"></i>
                    </a>
                    </li>*@
                </ul>
                <button class="navbar-toggler navbar-toggler-right d-lg-none align-self-center" type="button" data-toggle="offcanvas">
                    <span class="mdi mdi-menu"></span>
                </button>
            </div>
        </nav>
        <!-- partial -->
        <div class="container-fluid page-body-wrapper">
            <!-- partial:../../partials/_sidebar.html -->
            <nav class="sidebar sidebar-offcanvas" id="sidebar">
                <ul class="nav">
                    <li class="nav-item nav-profile">
                        <a href="#" class="nav-link">
                            <div class="nav-profile-image">
                                @if (User.Identity.IsAuthenticated)
                                {
                                    var customClaimValue = User.FindFirst("ProfilePhotoPath").Value;

                                    @if (customClaimValue.ToString().Length >= 3)
                                    {
                                        <img src="~/images/@customClaimValue" alt="Profile" />
                                        <span class="login-status online"></span>
                                    }
                                }
                                else
                                {
                                    <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" alt="Profile">
                                        <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0" />
                                        <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8m8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1" />
                                    </svg>
                                    <span class="login-status offline"></span>
                                }
                            </div>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="nav-profile-text d-flex flex-column">
                                    <span class="font-weight-bold mb-2">@User.FindFirst("FullName").Value</span>
@*                                    <span class="text-secondary text-small">@User.FindFirst(type:"Role").Value</span>
*@                                </div>
                                <i class="mdi mdi-bookmark-check text-success nav-profile-badge"></i>
                            }
                        </a>
                    </li>
                    <li class="nav-item">
                        <!-- Add admin and user dashboard href-->
                        <a class="nav-link" href="~/User/AdminDashboard/0">
                            <span class="menu-title">Dashboard</span>
                            <i class="mdi mdi-home menu-icon"></i>
                        </a>
                        <!-- Add admin and user dashboard -->
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/Message/GetConversation/0">
                            <span class="menu-title">Messages</span>
                            <i class="mdi mdi-message-processing menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="MakeUpCreator" asp-action="Index">
                            <span class="menu-title">MakeUp Creator</span>
                            <i class="mdi mdi-brush menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Courses" asp-action="Index">
                            <span class="menu-title">Courses</span>
                            <i class="mdi mdi-book-open-page-variant menu-icon"></i>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Reservation" asp-action="Calendar">
                            <span class="menu-title">Calendar</span>
                            <i class="mdi mdi-calendar-clock menu-icon"></i>
                        </a>
                    </li>
                </ul>
            </nav>
            <!-- Body Render -->
            <div class="main-panel">
                <div class="content-wrapper">
                    @RenderBody()
                </div>
                <footer class="footer">
                    <div class="container-fluid d-flex justify-content-between">
                        <span class="text-muted d-block text-center text-sm-start d-sm-inline-block">Copyright © BeautyApp</span>
                    </div>
                </footer>
            </div>
            <!-- Body Render -->
        </div>
    </div>

    <script src="~/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="~/assets/vendors/chart.js/Chart.min.js"></script>
    <script src="~/assets/js/off-canvas.js"></script>
    <script src="~/assets/js/hoverable-collapse.js"></script>
    <script src="~/assets/js/misc.js"></script>
    <script src="~/assets/js/chart.js"></script>
</body>
</html>

<div class="modal" tabindex="-1" role="dialog" id="myModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Sign in</h5>
                <span aria-hidden="true">
                    <button type="button" class="btn-close" data-dismiss="modal" aria-label="Close">
                    </button>
                </span>
            </div>
            <div class="modal-body " id="editReservationContent">
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary registerBtn" data-dismiss="modal">Register</button>
            </div>
        </div>
    </div>
</div>


<script src="~/js/site.js" asp-append-version="true"></script>
@await RenderSectionAsync("Scripts", required: false)

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $("#showModalBtn").on("click", function () {
            $("#myModal").modal("show");
            $.ajax({
                url: '/Account/Login', // Sprawdź, czy ta ścieżka jest poprawna
                type: 'GET',
                success: function (data) {
                    $('#editReservationContent').html(data);
                }
            });
        });

        // Zarejestruj zdarzenie kliknięcia na przycisku registerBtn
        $(document).on("click", ".registerBtn", function () {
            $.ajax({
                url: '/Account/RegisterUser', // Sprawdź, czy ta ścieżka jest poprawna
                type: 'GET',
                success: function (data) {
                    $('#editReservationContent').html(data);
                }
            });
        });
    });
</script>

