
<h4>Reservation</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="changeReservationStatus">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input name="id" id="id" class="form-control" value="@ViewBag.ReservationId" />
            </div>
            <div class="form-group">
                <label name="status" id="status" class="control-label"></label>
                <select name="status" id="status" class="form-control" asp-items="ViewBag.StatusList"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
