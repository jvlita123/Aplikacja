        $.ajax({
            url: '/Reservation/RemoveReservation', // Sprawdź poprawność ścieżki do akcji kontrolera
            type: 'POST',
            data: { id: reservationId }, // Przekazanie identyfikatora rezerwacji
            success: function (data) {
