@model Data.Dto_s.UserReservationsDto
<style>
    .reservation-box {
        border: 1px solid #ccc;
        border-radius: 10px;
        padding: 10px;
        margin: 10px 0;
        box-shadow: 2px 2px 5px #888888; 
    }

    .reservation-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        border-bottom: 1px solid #ccc;
        padding-bottom: 5px;
        margin-bottom: 5px;
    }

    .status {
        font-weight: bold;
        padding: 7px;
        border-radius: 6px;
        color: white;
        font-size: 0.8em;
    }

    .confirmed {
        background-color: #9CCC65;
    }

    .finished {
        background-color: #8A8A8A;
    }

    .cancelled {
        background-color: #CC6666;
    }

    .pending {
        background-color: #EAF0C9;
    }

    .date {
        font-size: 0.8em;
        display: flex;
        flex-direction: column;
        text-align: right;
        color: #444;
    }

    .month {
        font-size: 1.5em;
        font-weight: bold;
        margin: 0;
    }

    .day {
        font-size: 2.5em;
        font-weight: bold;
        margin: 0;
    }

    .time {
        font-size: 1.2em;
        margin: 0;
    }
</style>

<h2>Pending Reservations</h2>
        @foreach (var reservation in Model.PendingReservations)
        {
            <div class="reservation-box">
                <div class="reservation-header">
              
            <span class="status @(reservation.Status.Name.ToLower()) changeStatus">
                @reservation.Status.Name
            </span>
            <span class="reservationId" style="display:none;">@reservation.Id</span>


                    <span class="date">
                        <p class="month">@reservation.Start.ToString("MMMM")</p>
                        <p class="day">@reservation.Start.ToString("dd")</p>
                        <p class="time">@reservation.Start.ToString("HH:mm")</p>
                    </span>
                </div>
                <h4>@reservation.Title</h4>

            <button id="deleteReservationBtn"  class="btn btn-danger">Delete</button>
            <button id="editReservationBtn" class="btn btn-info">Edit</button>

            </div>
        }

<h2>Confirmed Reservations</h2>
        @foreach (var reservation in Model.ConfirmedReservations)
        {
            <div class="reservation-box">
                <div class="reservation-header">
                    <span class="status @(reservation.Status.Name.ToLower())">
                        @reservation.Status.Name
                    </span>
                    <span class="date">
                        <p class="month">@reservation.Start.ToString("MMMM")</p>
                        <p class="day">@reservation.Start.ToString("dd")</p>
                        <p class="time">@reservation.Start.ToString("HH:mm")</p>
                    </span>
                </div>
                <h4>@reservation.Title</h4>
            </div>
        }



<h2>Finished Reservations</h2>
        @if (Model.FinishedReservations != null)
        {
            @foreach (var reservation in Model.FinishedReservations)
            {
                <div class="reservation-box">
                    <div class="reservation-header">
                        <span class="status @(reservation.Status.Name.ToLower())">
                            @reservation.Status.Name
                        </span>
                        <span class="date">
                            <p class="month">@reservation.Start.ToString("MMMM")</p>
                            <p class="day">@reservation.Start.ToString("dd")</p>
                            <p class="time">@reservation.Start.ToString("HH:mm")</p>
                        </span>
                    </div>
                    <h4>@reservation.Title</h4>
                </div>
            }

        }


<h2>Cancelled Reservations</h2>

        @if (Model.CancelledReservations!=null)
        {
            @foreach (var reservation in Model.CancelledReservations)
            {
                <div class="reservation-box">
                    <div class="reservation-header">
                        <span class="status @(reservation.Status.Name.ToLower())">
                            @reservation.Status.Name
                        </span>                    
                        <span class="date">
                            <p class="month">@reservation.Start.ToString("MMMM")</p>
                            <p class="day">@reservation.Start.ToString("dd")</p>
                            <p class="time">@reservation.Start.ToString("HH:mm")</p>
                        </span>
                    </div>
                    <h4>@reservation.Title</h4>
                </div>
            }
        }



<div class="modal fade" id="deleteConfirmationModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Are you sure you want to delete this reservation?</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this reservation?</p>
            </div>
            <div class="modal-footer">
                <button id="confirmDeleteBtn" class="btn btn-danger" data-dismiss="modal">Yes</button>
                <button id="cancelDeleteBtn" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>

<div id="editModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body" id="editReservationContent">
            </div>
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

