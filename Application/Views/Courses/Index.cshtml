@model IEnumerable<Data.Entities.Course>

<head>
    <link rel="stylesheet" href="~/css/courses/course.css" />
</head>

 <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title">
                <span class=" bg-gradient-primary text-white me-2">
                </span> Courses
            <button class="newCourseButton btn button-styled" ">
                add new course
            </button>
            </h3>
        </div>
        <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 stretch-card grid-margin">
                <div class="card card-img-holder text-white">
                    <div class="card-body">
                        <h4 class="font-weight-normal mb-3">
                            <div class="btn-primary getCourseButton" data-course-id="@item.Id">
                                @item.Title 
                            </div>
                        </h4>
                        <h2 class="mb-5">
                        @foreach (var cycle in item.Cycles.OrderBy(x => x.StartDate))
                        {
                            <button class="deleteCycleButton btn button-styled" data-cycle-id="@cycle.Id" data-course-id="@item.Id">
                                @cycle.StartDate.ToString("yyyy-MM-dd HH:mm") - @cycle.EndDate.ToString("yyyy-MM-dd HH:mm")
                            </button>
                        }
                        </h2>
                    </div>
                    <div class="btn-group">
                    <button class="newEnrollmentButton  button-styled btn" data-course-id="@item.Id">
                        Enroll
                    </button>
                    <button class="addCycleButton  button-styled btn" data-course-id="@item.Id">Add New Cycle</button>
                    </div>
                </div>
            </div>
        }
      </div>
</div>

<!-- Modal -->
<div class="modal fade" id="alertModal" tabindex="-1" role="dialog" aria-labelledby="alertModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-body" id="alertMessage"></div>
            <div class="modal-footer">
                <button type="button" class="closeBtn btn btn-secondary" data-dismiss="modal">OK</button>
            </div>
        </div>
    </div>
</div>

<div id="newEnrollmentModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body" id="newEnrollmentContext">
            </div>
            <div class="modal-footer">
                <button type="button" class="closeBtn btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>


<div id="newCycleModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-body" id="newCycleContent">
            </div>
            <div class="modal-footer">
                <button type="button" class="closeBtn btn btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="deleteConfirmationModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Are you sure you want to delete this course day?</h5>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this course day?</p>
            </div>
            <div class="modal-footer">
                <button id="confirmDeleteBtn" class="btn btn-danger" data-dismiss="modal">Yes</button>
                <button id="cancelDeleteBtn" class="btn closeBtn  btn-secondary" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>


<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
<script>
    let newCycles = []; 

    $('.addCycleButton').on('click', function () {
        var courseId = $(this).data('course-id');
        $('#newCycleModal').modal('show');
        $.ajax({
            url: '/Cycles/NewCycle',
            type: 'GET',
            data: { id: courseId },
            success: function (data) {
                $('#newCycleContent').html(data); 
            }
        });
    });

    $('.newEnrollmentButton').on('click', function () {
        var courseId = $(this).data('course-id');
        $('#newEnrollmentModal').modal('show');
        $.ajax({
            url: '/Enrollment/NewEnrollment', 
            type: 'GET',
            data: { id: courseId }, 
            success: function (data) {
                $('#newEnrollmentContext').html(data);
            }
        });
    });

    $('.getCourseButton').on('click', function () {
        var courseId = $(this).data('course-id');
        window.location.href = '/Courses/GetCourse/' + courseId;
    });

    $('.newCourseButton').on('click', function () {
        $('#newCycleModal').modal('show');
        $.ajax({
            url: '/Courses/NewCourse', 
            type: 'GET',
            success: function (data) {
                $('#newCycleContent').html(data);
            }
        });
    });

    $('.deleteCycleButton').on('click', function () {
        var cycleId = $(this).data('cycle-id'); 
        $('#deleteConfirmationModal').modal('show');
        $('#confirmDeleteBtn').data('cycle-id', cycleId);
    });

    $('#confirmDeleteBtn').on('click', function () {
        var cycleId = $(this).data('cycle-id');
        $.ajax({
            url: '/Cycles/DeleteCycle',
            type: 'POST',
            data: { cycleId: cycleId },
            success: function (data) {
                $('#deleteConfirmationModal').modal('hide'); 
            }
        });
    });
    $(document).ready(function () {
        var message = '@TempData["Message"]';
        if (message !== '') {
            $('#alertMessage').text(message);
            $('#alertModal').modal('show');
        }
    });
    $('.closeBtn').on('click', function () {
        $('#newCycleModal').modal('hide');
        $('#alertModal').modal('hide');+
        $('#newEnrollmentModal').modal('hide');
        $('#deleteConfirmationModal').modal('hide');
    });
</script>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
